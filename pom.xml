<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.aegisguard</groupId>
    <artifactId>aegisguard</artifactId>
    <version>1.0.0</version>
    <name>AegisGuard</name>
    <description>Lightweight, friendly land protection with GUIs</description>

    <properties>
        <!-- --- MODIFIED: Upgraded to Java 21 --- -->
        <maven.compiler.release>21</maven.compiler.release>
        <paper.version>1.20.6-R0.1-SNAPSHOT</paper-version>
        <vaultapi.version>1.7</vaultapi.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>papermc-repo</id>
            <url>https://repo.papermc.io/repository/maven-public/</url>
        </repository>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
        <!-- --- NEW: Dynmap Repo --- -->
        <repository>
            <id>dynmap-repo</id>
            <url>https://repo.dynmap.us/mvn/</url>
        </repository>
        <!-- --- NEW: PlaceholderAPI Repo --- -->
        <repository>
            <id>placeholderapi-repo</id>
            <url>https://repo.extendedclip.com/content/repositories/placeholderapi/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Paper API (required for Minecraft server interaction) -->
        <dependency>
            <groupId>io.papermc.paper</groupId>
            <artifactId>paper-api</artifactId>
            <version>${paper.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Vault API (required for economy features) -->
        <dependency>
            <groupId>com.github.MilkBowl</groupId>
            <artifactId>VaultAPI</artifactId>
            <version>${vaultapi.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- --- NEW: Dynmap API (for map visualization) --- -->
        <dependency>
            <groupId>us.dynmap</groupId>
            <artifactId>dynmap-api</artifactId>
            <version>3.7-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- --- NEW: PlaceholderAPI (for server integration) --- -->
        <dependency>
            <groupId>me.clip</groupId>
            <artifactId>placeholderapi</artifactId>
            <version>2.11.6</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- --- CRITICAL: HikariCP for SQL connection pooling (SHADED) --- -->
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
            <version>5.1.0</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- --- CRITICAL: SQLite Driver (SHADED) --- -->
        <dependency>
            <groupId>org.xerial</groupId>
            <artifactId>sqlite-jdbc</artifactId>
            <version>3.45.1.0</version>
            <scope>compile</scope>
        </dependency>
        
    </dependencies>

    <!-- =========================
         Build & Plugins
    ========================== -->
    <build>
        <finalName>AegisGuard-${project.version}</finalName>
        <plugins>
            <!-- Java compiler -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>${maven.compiler.release}</release>
                    <forceJavacCompilerUse>true</forceJavacCompilerUse>
                </configuration>
            </plugin>

            <!-- --- CRITICAL: Maven Shade Plugin (Bundles DB drivers and prevents conflicts) --- -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <relocations>
                        <!-- Relocate HikariCP -->
                        <relocation>
                            <pattern>com.zaxxer.hikari</pattern>
                            <shadedPattern>com.aegisguard.lib.hikari</shadedPattern>
                        </relocation>
                        <!-- Relocate SQLite Driver -->
                        <relocation>
                            <pattern>org.sqlite</pattern>
                            <shadedPattern>com.aegisguard.lib.sqlite</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
            </plugin>
        </plugins>

        <!-- --- MODIFIED: Resource Filtering --- -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>plugin.yml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>plugin.yml</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>
